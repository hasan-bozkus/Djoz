@model List<ResultDjInfoListQueryResponse>

<section class="about spad">
    <div class="container">
        @foreach (var item in Model)
        {
            <div class="row">
                <div class="col-lg-6">
                    <div class="about__pic">
                        <img src="~/Djoz/img/about/about.png" alt="">
                    </div>
                </div>
                <div class="col-lg-6">
                    <div class="about__text">
                        <div class="section-title">
                            <h2>@item.Name</h2>
                            <h1>Hakkımda</h1>
                        </div>
                        <p>
                            @item.Description
                        </p>
                        <a href="#" class="primary-btn">İLETİŞİM</a>
                    </div>
                </div>
            </div>
        }

    </div>
</section>