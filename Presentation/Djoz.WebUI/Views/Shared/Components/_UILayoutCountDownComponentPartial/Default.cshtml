@model GetCountDownQueryResponse

@{
    // Şu anki tarih
    var currentDate = DateTime.UtcNow;
    // Modeldeki hedef tarih
    var targetDate = Model.Date;

    // Hedef tarihe kalan farkı hesaplayalım
    var timeDiff = targetDate - currentDate;

    // Farkı gün, saat, dakika, saniye olarak hesapla
    var days = (int)timeDiff.TotalDays;
    var hours = timeDiff.Hours;
    var minutes = timeDiff.Minutes;
    var seconds = timeDiff.Seconds;
}

<section class="countdown spad set-bg" data-setbg="@Url.Content("/Djoz/img/countdown-bg.jpg")">
    <div class="container">
        <div class="row">
            <div class="col-lg-12">
                <div class="countdown__text">
                    <h1>@Model.Title</h1>
                    <h4>@Model.SubTitle</h4>
                </div>
                <div class="countdown__timer" id="countdown-time">
                    <div class="countdown__item">
                        <span>@days</span>
                        <p>gün</p>
                    </div>
                    <div class="countdown__item">
                        <span>@hours</span>
                        <p>saat</p>
                    </div>
                    <div class="countdown__item">
                        <span>@minutes</span>
                        <p>dakika</p>
                    </div>
                    <div class="countdown__item">
                        <span>@seconds</span>
                        <p>saniye</p>
                    </div>
                </div>
                <div class="buy__tickets">
                    <a href="#" class="primary-btn">Bilet Al</a>
                </div>
            </div>
        </div>
    </div>
</section>