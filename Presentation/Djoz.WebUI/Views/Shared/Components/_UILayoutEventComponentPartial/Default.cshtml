@model List<ResultEventListQueryResponse>

<section class="event spad">
	<div class="container">
		<div class="row">
			<div class="col-lg-12">
				<div class="section-title">
					<h2>Yaklaşan Etkinlikler</h2>
				</div>
			</div>
		</div>
		<div class="row">
			<div class="event__slider owl-carousel">
				@foreach (var item in Model)
				{
					<div class="col-lg-4">
						<div class="event__item">
							<div class="event__item__pic set-bg" data-setbg=@Url.Content(item.ImageUrl)>
								<div class="tag-date">
									<span>@item.Date.ToString("MMM dd, yyyy")</span>
								</div>
							</div>
							<div class="event__item__text">
								<h4>@item.Name</h4>
								<p><i class="fa fa-map-marker"></i> @item.Location</p>
							</div>
						</div>
					</div>
				}
			</div>
		</div>
	</div>
</section>