@model CreatePackageCommandRequest
@{
    ViewData["Title"] = "CreatePackage";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title d-flex justify-content-center">Yeni Paket Ekle</div>
			</div>
			<form method="post">
				<div class="card-body">
					<div class="row justify-content-center">
						<div class="col-md-12 col-lg-8">
							<div class="form-group">
								<label>Paket Adı</label>
								<input type="text" class="form-control" asp-for="Name" />
								<span asp-validation-for="Name" class="text-danger"></span>
							</div>
							<div class="form-group form-inline">
								<label class="col-md-3 col-form-label">Müzikler</label>
								<select asp-for="SongIds" asp-items="ViewBag.songsList" class="form-control select2" multiple="multiple">
								</select>
								<span asp-validation-for="SongIds" class="text-danger"></span>
							</div>
						</div>
					</div>
				</div>
				<div class="card-action d-flex justify-content-center">
					<button type="submit" class="btn btn-success">Kaydet</button>
					<a href="/Admin/AdminPackage/Index" class="btn btn-danger">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>
