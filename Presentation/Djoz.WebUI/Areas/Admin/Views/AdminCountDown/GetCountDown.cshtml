@model GetCountDownQueryResponse
@{
    ViewData["Title"] = "GetCountDown";
    Layout = "~/Areas/Admin/Views/AdminLayout/_AdminLayout.cshtml";
}

<div class="row">
	<div class="col-md-12">
		<div class="card">
			<div class="card-header">
				<div class="card-title d-flex justify-content-center">Yeni Banner Ekle</div>
			</div>
			<form asp-action="UpdateCountDown" method="post">
				<div class="card-body">
					<div class="row justify-content-center">
						<div class="col-md-12 col-lg-8">

							<input type="hidden" asp-for="CountDownId" />

							<div class="form-group">
								<label>Alt Başlık</label>
								<input type="text" class="form-control" asp-for="SubTitle" />
								<span asp-validation-for="SubTitle" class="text-danger"></span>
							</div>
							<div class="form-group form-inline">
								<label class="col-md-3 col-form-label">Başlık</label>
								<div class="col-md-9 p-0">
									<input type="text" class="form-control input-full" asp-for="Title" />
									<span asp-validation-for="Title" class="text-danger"></span>
								</div>
							</div>
							<div class="form-group">
								<label>Tarih</label>
								<div class="col-md-9 p-0">
									<input type="date"
										   class="form-control input-full"
										   asp-for="Date" />
									<span asp-validation-for="Date" class="text-danger"></span>
								</div>
							</div>
						</div>
					</div>
				</div>
				<div class="card-action d-flex justify-content-center">
					<button type="submit" class="btn btn-success">Kaydet</button>
					<a href="/Admin/AdminCountDown/Index" class="btn btn-danger">Vazgeç</a>
				</div>
			</form>
		</div>
	</div>
</div>
